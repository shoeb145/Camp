<% layout('layout/boilerplate') %>
    <h1>campgrounds</h1>
    <div><a href="/campgrounds/new">add campground</a></div>
    <% for(campground of campgrounds) { %>

        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= campground.image %>" class="img-fluid" alt="" srcset="">

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5>
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="text-muted">
                            <%= campground.location %>
                        </p>

                        <a href='/campgrounds/<%= campground._id %>' class="btn btn-primary" type="button">View <%=
                                campground.title %>
                        </a>

                    </div>

                </div>


            </div>

        </div>



        <% } %>